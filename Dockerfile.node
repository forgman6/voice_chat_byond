FROM node:20-bookworm

RUN apt-get update \
	&& apt-get install -y --no-install-recommends python3 make g++ \
	&& rm -rf /var/lib/apt/lists/*

WORKDIR /app/webrtc

# copy manifests (lockfile optional)
COPY webrtc/package*.json ./

# install deps (prefer lock if present)
RUN if [ -f package-lock.json ]; then \
		echo "lockfile found -> npm ci"; \
		npm ci; \
	else \
		echo "no lockfile -> npm install"; \
		npm install; \
	fi

# now copy the rest
COPY webrtc/. .

EXPOSE 3000
CMD ["npm","start"]
